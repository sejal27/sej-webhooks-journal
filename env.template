# HubSpot OAuth Configuration
# Copy this file to .env and fill in your actual values

# HubSpot OAuth Credentials
# Get these from your HubSpot Developer Account. 
# You must use an OAuth based application and have it installed in one or more portals.
HUBSPOT_CLIENT_ID=your_client_id_here
HUBSPOT_CLIENT_SECRET=your_client_secret_here

# HubSpot API Base URL
# Using QA environment for development/testing
HUBSPOT_API_BASE_URL=https://api.hubapi.com

# OAuth Token Endpoint
HUBSPOT_OAUTH_TOKEN_URL=https://api.hubapi.com/oauth/v1/token

# Optional: Default Portal ID for testing
# You can override this in the CLI when making requests
DEFAULT_PORTAL_ID=your_portal_id_here

# Optional: Enable debug logging
DEBUG=false 